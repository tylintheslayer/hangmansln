<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HangmanAssignment.HangmanGamePage"
             Title="Hangman Game">

	<StackLayout>
		<Label x:Name="WordLabel" HorizontalTextAlignment="Center" FontSize="Large" Margin="0,20,0,0"/>
		<Image x:Name="HangmanImage" Margin="0,20,0,0" HeightRequest="200"/>
		<Entry x:Name="GuessEntry" Placeholder="Enter your guess" HorizontalOptions="FillAndExpand" Margin="20,20,20,0"/>
		<Button Text="Guess" Clicked="OnGuessClicked" HorizontalOptions="Center" Margin="20"/>
	</StackLayout>

</ContentPage>